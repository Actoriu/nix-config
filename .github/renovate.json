{
    "extends": ["config:base"],
    "labels": ["dependencies"],
    "rangeStrategy": "auto",
    "semanticCommits": "enabled",
    "suppressNotifications": ["prIgnoreNotification"],
    "automerge": true,
    "ignoreTests": true,
    "nix": { "enabled": true },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "after 1am and before 3am"
        ]
    },
    "packageRules": [
      {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
      }
    ]
}
